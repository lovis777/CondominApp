<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.condominio.proy.condominapp.activity.activitys.RegistroPersona"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        style="@style/cordotexto"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cordotexto"
        android:id="@+id/txtNombrePers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bloque/Apartamento"
        style="@style/cordotexto"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cordotexto"
        android:id="@+id/txtBloco_ap" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/cordotexto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sexo:"
            android:id="@+id/textView4" />
        <RadioGroup
            android:id="@+id/rgSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Masculino"
            style="@style/cordotexto"
            android:id="@+id/rbMasculino" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/cordotexto"
            android:text="Feminino"
            android:id="@+id/rbFeminino" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/cordotexto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status:"
            android:id="@+id/textView5" />
        <RadioGroup
            android:id="@+id/rgstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                style="@style/cordotexto"
                android:text="Habitante"
                android:id="@+id/rbMorador" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/cordotexto"
                android:text="Funcionario"
                android:id="@+id/rbFuncionario" />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Posee Vehiculo ?"
        style="@style/cordotexto"
        android:id="@+id/textView7" />


    <RadioGroup
        android:id="@+id/rgVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cordotexto"
        android:text="  SI"
        android:id="@+id/rbSim" />
     <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/cordotexto"
            android:layout_marginLeft="50dp"
            android:text="  NO"
            android:id="@+id/rbNao" />
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        style="@style/cordotexto"
        android:layout_marginTop="20dp"
        android:text="Registrar"
        android:id="@+id/btnRegPers" />

</LinearLayout>
