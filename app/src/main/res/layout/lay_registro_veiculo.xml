<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.condominio.proy.condominapp.activity.activitys.RegistroVeiculo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Propietario"
        style="@style/cordotexto"
        android:id="@+id/txvPropietario" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spPropietario"
        android:layout_weight="0" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tipo"
            style="@style/cordotexto"
            android:id="@+id/txvTipo" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rgTipo"
        >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carro"
        style="@style/cordotexto"
        android:layout_marginLeft="50dp"
        android:id="@+id/rbCarro" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moto"
        style="@style/cordotexto"
        android:layout_marginLeft="50dp"
        android:id="@+id/rbMoto" />

    </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Marca"
        android:id="@+id/txvMarca"
        style="@style/cordotexto"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMarca"
        style="@style/cordotexto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Modelo"
        android:id="@+id/textView12"
        style="@style/cordotexto"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtModelo"
        style="@style/cordotexto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color"
        style="@style/cordotexto"
        android:id="@+id/txvCorVei" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cordotexto"
        android:id="@+id/txtCor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Placa"
        style="@style/cordotexto"
        android:id="@+id/txvPlaca" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cordotexto"
        android:id="@+id/txtPlaca" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:background="@color/accentColor"
        style="@style/cordotexto"
        android:id="@+id/btnRegVei" />


</LinearLayout>
