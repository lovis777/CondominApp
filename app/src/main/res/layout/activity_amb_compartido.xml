<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPlomillo"
        android:onClick="fnShowAmbC">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/pngambientes"
            android:id="@+id/img2"
            android:layout_below="@+id/v1"/>

        <TextView
            android:id="@+id/ambientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_ambM"
            android:textStyle="bold|italic"
            android:textSize="23dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="@color/colorNegro"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hr"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/piscina"
            android:textStyle="bold|italic"
            android:textColor="@color/colorNegro"
            android:text="PISCINA"
            android:gravity="top|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cochera"
            android:textStyle="bold|italic"
            android:textColor="@color/colorNegro"
            android:text="COCHERA"
            android:gravity="top|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/salon_recepciones"
            android:textStyle="bold|italic"
            android:textColor="@color/colorNegro"
            android:text="SALON DE RECEPCIONES"
            android:gravity="top|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gimnasio"
            android:textStyle="bold|italic"
            android:textColor="@color/colorNegro"
            android:text="GIMNASIO"
            android:gravity="top|center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/terraza"
            android:textStyle="bold|italic"
            android:textColor="@color/colorNegro"
            android:text="TERRAZA"
            android:gravity="top|center"/>
    </LinearLayout>

</LinearLayout>
